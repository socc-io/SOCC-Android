<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#cecece</item>
        <item name="colorControlActivated">#FD6565</item>
        <item name="colorControlHighlight">#FD6565</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#C6C6C6</item>
        <item name="colorControlActivated">#C6C6C6</item>
    </style>

    <style name="CustomTextInputLayout" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColorHint">#fff</item>
        <item name="colorControlNormal">#FD6565</item>
        <item name="colorControlActivated">#FD6565</item>
        <item name="colorControlHighlight">#FD6565</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="CustomStepTabsContainerStyle" parent="MSDefaultStepperLayoutTheme">
        <item name="ms_stepTabsScrollViewStyle">@style/DarkStepTabsContainerStyle</item>
        <item name="ms_tabsContainerStyle">@style/CSTStepTabsContainer</item>
        <item name="ms_bottomNavigationStyle">@style/MSBottomNavigation</item>
        <item name="ms_backNavigationButtonStyle">@style/MSNavBarButton.Back</item>
        <item name="ms_nextNavigationButtonStyle">@style/MSNavBarButton.Next</item>
        <item name="ms_completeNavigationButtonStyle">@style/MSNavBarButton.Complete</item>
        <item name="ms_colorableProgressBarStyle">@style/MSColorableProgressBar</item>
        <item name="ms_stepPagerProgressBarStyle">@style/MSStepPagerProgressBarStyle</item>
        <item name="ms_stepTabsInnerContainerStyle">@style/MSStepTabsInnerContainer</item>
        <item name="ms_stepTabContainerStyle">@style/CSTStepTabsContainer</item>
        <item name="ms_stepTabNumberStyle">@style/MSStepTabNumber</item>
        <item name="ms_stepTabDoneIndicatorStyle">@style/MSStepTabDoneIndicator</item>
        <item name="ms_stepTabIconBackgroundStyle">@style/MSStepTabIconBackground</item>
        <item name="ms_stepTabTitleStyle">@style/MSStepTabTitle</item>
        <item name="ms_stepTabDividerStyle">@style/MSStepTabDivider</item>
        <item name="ms_stepTabsProgressMessageStyle">@style/MSStepTabsProgressMessage</item>
    </style>

    <style name="DarkStepTabsContainerStyle">
        <item name="android:background">#C0392B</item>
        <item name="android:layout_height">70dip</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:scrollbars">none</item>
    </style>
    <style name="CSTStepTabsContainer" parent="">
        <item name="android:layout_height">70dip</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="DarkStepTabTitleStyle" parent="MSStepTabTitle">
        <item name="android:textColor">@color/ms_white</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
