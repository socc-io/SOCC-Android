<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/tasksContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/socc"
            android:layout_above="@+id/edit_field"
            android:layout_alignEnd="@+id/login_btn" />
        <LinearLayout
            android:id="@+id/edit_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true">

            <EditText
                android:id="@+id/account_id"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:hint="아이디를 입력하세요."
                android:background="@drawable/round"
                android:layout_margin="1dp" />

            <EditText
                android:id="@+id/account_pwd"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:inputType="textPassword"
                android:hint="패스워드를 입력하세요."
                android:background="@drawable/round"
                android:layout_margin="1dp" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/edit_field"
            android:text="SIGN IN"
            android:layout_alignBottom="@+id/edit_field"
            android:layout_alignTop="@+id/edit_field"
            android:background="@drawable/round_button"
            android:onClick="clickMethod"
            android:id="@+id/login_btn" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_field"
            android:text="자동로그인"
            android:textColor="#ffffff"
            android:buttonTint="#ffffff"
            android:layout_alignParentStart="true"
            android:id="@+id/checkBox" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBox"
            android:layout_alignEnd="@+id/login_btn"
            android:layout_alignStart="@+id/checkBox"
            android:textColor="#fff"
            android:background="#FF8000"
            android:text="Sign UP"
            android:id="@+id/signup_btn">
        </Button>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="암호를 잊으셨습니까?"
            android:id="@+id/textView3"
            android:layout_marginTop="24dp"
            android:gravity="center_horizontal"
            android:layout_below="@+id/signup_btn"
            android:layout_alignStart="@+id/signup_btn"
            android:layout_alignEnd="@+id/login_btn" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="개인정보취급방침"
            android:id="@+id/textView2"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_alignEnd="@+id/textView3"
            android:gravity="center_horizontal" />
    </RelativeLayout>

</FrameLayout>
