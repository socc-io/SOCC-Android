<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/singupContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <LinearLayout
            android:id="@+id/profile_component"
            android:layout_width="match_parent"
            android:layout_height="180dip"
            android:minHeight="180dip"
            android:background="#2C82C9"
            android:gravity="bottom"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/profile_img"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_gravity="bottom|left"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="30dip"
                android:layout_marginBottom="10dip"
                android:src="@drawable/default_profile_pic"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/signup_field"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_margin="30dip"
            android:layout_below="@id/profile_component"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edit_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_menu_send"
                    android:hint="User name"
                    android:inputType="textEmailAddress"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_user_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edit_user_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_menu_send"
                    android:hint="Password" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_menu_send"
                    android:hint="E-mail address"/>
            </android.support.design.widget.TextInputLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dip"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/round_button"
                android:text="Sign Up"/>
        </LinearLayout>



    </RelativeLayout>

</FrameLayout>
